<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Almg.MobileSigner.Pages.ConfigPage" Title="Configurações">
    <ContentPage.Content>
        <StackLayout Margin="20, 0">
            <Label Text="Utilize a opção abaixo para atualizar o certificado digital utilizado para assinaturas digitais." Margin="32"/>
            <Button x:Name="btnLoadCert" Text="Atualizar certificado" Margin="20,0" Clicked="OnConfigClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>